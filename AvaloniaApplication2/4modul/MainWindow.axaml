<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="_4modul.MainWindow"
        Title="AvaloniaHttpClientApp"
        Width="400" Height="300">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">

        <TextBox x:Name="FieldA" Watermark="Поле A" Width="1000" />

        <TextBox x:Name="FieldB" Watermark="Поле B" Width="1000" />

        <Button x:Name="ButtonA" Content="Кнопка A" Width="100" Click="ButtonA_Click" />

        <Button x:Name="ButtonB" Content="Кнопка B" Width="100" Click="ButtonB_Click"/>
    </StackPanel>
</Window>